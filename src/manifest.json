{
  "manifest_version": 3,
  "name": "Media Extractor Supreme",
  "version": "1.4",
  "description": "Extract 4K video, audio, and galleries with Context Menu & HLS sniffing.",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "contextMenus"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}
